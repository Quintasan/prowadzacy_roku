!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "width=device-width, initial-scale=1, shrink-to-fit=no", :name => "viewport"}
    %title Prowadzący Roku
    = csrf_meta_tags
    = csp_meta_tag
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
    = stylesheet_pack_tag 'stylesheets', 'data-turbolinks-track': 'reload'
  %body
    .d-flex.flex-column.flex-md-row.align-items-center.p-3.px-md-4.mb-3.bg-white.border-bottom.box-shadow
      %h5.my-0.mr-md-auto.font-weight-normal Prowadzący Roku
      - if admin_signed_in?
        %nav.my-2.my-md-0.mr-md-3
          %a.p-2.text-dark{href: admin_fixtures_path}= t(".fixtures")
          %a.p-2.text-dark{href: admin_contests_path}= t(".contests")
          %a.p-2.text-dark{href: admin_contestants_path}= t(".contestants")
          %a.p-2.text-dark{href: admin_entries_path}= t(".entries")
          %a.p-2.text-dark{href: admin_votes_path}= t(".votes")
          = link_to t(".sign_out"), destroy_admin_session_path, method: :delete, class: "p-2 text-dark"
      - else
        %nav.my-2.my-md-0.mr-md-3
          %a.p-2.text-dark{href: new_admin_session_path}= t(".sign_in")
    = render partial: 'flash', flash: flash
    .container.mt-5
      .col-md-9.offset-md-1
        = yield
